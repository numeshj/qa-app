{
  "name": "qa-platform",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "postinstall": "",
    "build": "pnpm -r build",
    "dev": "pnpm --recursive --parallel dev",
    "dev:api": "pnpm --filter @qa/api dev",
    "dev:web": "pnpm --filter @qa/web dev",
    "generate": "pnpm --filter @qa/api exec prisma generate",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "format": "pnpm -r format"
  }
}
